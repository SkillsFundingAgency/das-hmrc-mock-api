@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.Title = "Log in to the government gateway";
}

<div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <partial model="@ViewData.ModelState" name="_ValidationSummary" />
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">Sign in</h1>
            <p class="govuk-hint govuk-!-font-size-24">Enter your Government Gateway credentials to sign in. You received these when you created your HMRC online account</p>
            <div class="govuk-inset-text">
              NOTE: This is a mockup of the HMRC Tax Platform - DO NOT ENTER LIVE GATEWAY CREDENTIALS!
            </div>
            <form method="POST">
                <div class="govuk-form-group @(!string.IsNullOrEmpty(Model.UserId) ? "govuk-form-group--error" : "")">
                    <label id="UserId-label" for="UserId" class="govuk-label">
                        User ID
                    </label>
                    @if (!string.IsNullOrEmpty(Model.UserId))
                    {
                        <span id="error-message-userid" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> @Model.UserIdError
                        </span>
                    }
                    <input id="UserId" name="UserId" type="text" maxlength="100" class="govuk-input govuk-!-width-two-thirds" aria-required="true"
                           aria-describedby="@(!string.IsNullOrEmpty(Model.UserIdError) ? "error-message-userid" : "")"
                           value="@Model.UserId" />
                </div>
                <div class="govuk-form-group @(!string.IsNullOrEmpty(Model.PasswordError) ? "govuk-form-group--error" : "")">
                    <label id="Password-label" for="Password" class="govuk-label">
                        Password
                    </label>
                    @if (!string.IsNullOrEmpty(Model.PasswordError))
                    {
                        <span id="error-message-password" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> @Model.PasswordError
                        </span>
                    }
                    <input id="Password" name="Password" type="text" maxlength="100" class="govuk-input govuk-!-width-two-thirds" aria-required="true"
                           aria-describedby="@(!string.IsNullOrEmpty(Model.PasswordError) ? "error-message-password" : "")"
                           value="@Model.Password" />
                </div>
    
    
                <div class="govuk-inset-text">
                    <span>By continuing you accept the <a href="@Model.TermsOfUseLink" class="govuk-link" target="_blank">terms of use(opens in a new tab)</a></span>
                </div>
                <div class="govuk-button-group">
                    <button class="govuk-button" type="submit">Continue</button>
                </div>
    
    
            </form>
        </div>
    </div>
</div>